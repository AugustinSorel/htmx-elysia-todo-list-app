{
  "name": "htmx-cc",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "server:dev": "bun --watch ./src/index.ts",
    "styles:build": "tailwindcss -i ./src/styles/styles.css -o ./public/styles.css",
    "styles:dev": "bun run styles:build --watch",
    "db:run": "docker compose up",
    "db:push": "drizzle-kit push",
