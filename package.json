    "dev": "concurrently bun:*:dev"
  },
  "devDependencies": {
    "bun-types": "latest",
    "concurrently": "^8.2.2",
    "prettier": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.6.1",
    "tailwindcss": "^3.4.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@elysiajs/html": "^1.0.2",
    "@elysiajs/static": "^1.0.3",
    "@lucia-auth/adapter-drizzle": "^1.0.7",
    "@sinclair/typebox": "^0.32.31",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.22.6",
    "drizzle-orm": "^0.31.0",
    "elysia": "^1.0.22",
    "i": "^0.3.7",
    "lucia": "^3.2.0",
    "lucide-react": "^0.383.0",
    "postgres": "^3.4.4",
    "tailwind-merge": "^2.3.0",
    "zod": "^3.23.8"
  }
